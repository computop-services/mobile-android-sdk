<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:paddingBottom="8dp">

    <com.wallee.android.sdk.view.selection.PaymentMethodImageView
        android:id="@+id/token_payment_method_icon_view"
        android:layout_width="100dp"
        android:layout_height="50dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="8dp">

        <TextView
            android:id="@+id/payment_method_name_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Credit Card"/>

        <TextView
            android:id="@+id/token_name_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="XXXX XXXX XXXX 1111"/>

    </LinearLayout>


</LinearLayout>