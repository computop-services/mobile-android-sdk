<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:id="@+id/checkout_failure_message"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="#ef5050"
        android:padding="16dp"
        android:text="The payment was not completed."
        android:textColor="#FFFFFF"/>

    <TextView
        android:id="@+id/checkout_success_message"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="#2abf97"
        android:padding="16dp"
        android:text="The payment was successful."
        android:textColor="#FFFFFF"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Some Demo Product"
            android:textColor="#888"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/image_border"
            android:padding="8dp"
            android:src="@mipmap/sample_product_image"/>

    </LinearLayout>

    <Button
        android:id="@+id/button_pay"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#5cb85c"
        android:text="@string/action_pay"
        android:textColor="#fff"
        android:textStyle="bold"
        android:visibility="visible"/>

</LinearLayout>